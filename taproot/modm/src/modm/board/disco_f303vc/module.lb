def init(module):
    module.name = ":board:disco-f303vc"
    module.description = """\
# STM32F3DISCOVERY

[Discovery kit for STM32F303](https://www.st.com/en/evaluation-tools/stm32f3discovery.html]
"""

def prepare(module, options):
    if not options[":target"].partname.startswith("stm32f303vct"):
        return False

    module.depends(
        ":driver:l3gd20",
        ":driver:lsm303a",
        ":platform:clock",
        ":platform:core",
        ":platform:gpio",
        ":platform:i2c:1",
        ":platform:spi:1",
        ":platform:usb")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/board"
    env.substitutions = {
        "with_logger": False,
        "with_assert": env.has_module(":architecture:assert")
    }
    env.template("../board.cpp.in", "board.cpp")
    env.copy('.')
    env.collect(":build:openocd.source", "board/stm32f3discovery.cfg");
