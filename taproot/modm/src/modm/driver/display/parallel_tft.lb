def init(module):
    module.name = ":driver:parallel_tft_display"
    module.description = "Parallel Bus TFT Display"

def prepare(module, options):
    module.depends(
        ":architecture:delay",
        ":ui:display")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/driver/display"
    env.copy("parallel_tft.hpp")
    env.copy("parallel_tft_impl.hpp")
