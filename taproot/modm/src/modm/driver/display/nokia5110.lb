def init(module):
    module.name = ":driver:nokia5110"
    module.description = "Nokia 5110 Displays"

def prepare(module, options):
    module.depends(
        ":architecture:spi",
        ":ui:display")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/driver/display"
    env.copy("nokia5110.hpp")
    env.copy("nokia5110_impl.hpp")
