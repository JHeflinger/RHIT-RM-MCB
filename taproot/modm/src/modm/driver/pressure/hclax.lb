def init(module):
    module.name = ":driver:hclax"
    module.description = """\
# HCLA Pressure Sensor

Driver for the HCLA differential pressure sensors.

The device runs a cyclic program, which will store a corrected pressure value with
12 bit resolution about every 250 Î¼s within the output registers of the internal ASIC.
"""

def prepare(module, options):
    module.depends(
        ":architecture:i2c.device",
        ":math:utils")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/driver/pressure"
    env.copy("hclax.hpp")
