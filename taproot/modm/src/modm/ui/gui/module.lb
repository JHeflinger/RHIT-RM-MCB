def init(module):
    module.name = ":ui:gui"
    module.description = """\
# Graphical User Interface

Various classes for creating GUI applications.
"""

def prepare(module, options):
    module.depends(
        ":container",
        ":debug",
        ":processing:timer",
        ":ui:display",
        ":ui:gui",
        ":ui:menu")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/ui/gui"
    env.copy(".")
    env.copy("../gui.hpp")
