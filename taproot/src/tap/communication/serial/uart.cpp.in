    }
#endif
}

void Uart::flushWriteBuffer(UartPort port)
{
#ifdef PLATFORM_HOSTED
    UNUSED(port);
#else
    switch (port)
    {
%% for port in uart_ports
        case UartPort::Uart{{ port }}:
            Usart{{ port }}::flushWriteBuffer();
            break;
%% endfor
        default:
            break;
    }
#endif
}

