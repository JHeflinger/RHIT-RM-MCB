bool Uart::isWriteFinished(UartPort port) const
{
#ifdef PLATFORM_HOSTED
    UNUSED(port);
    return false;
#else
    switch (port)
    {
%% for port in uart_ports
        case UartPort::Uart{{ port }}:
            return Usart{{ port }}::isWriteFinished();
%% endfor
        default:
